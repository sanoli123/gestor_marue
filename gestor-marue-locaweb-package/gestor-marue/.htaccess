# SPA routing for React/Vite in /gestor-marue
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /gestor-marue/
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /gestor-marue/index.html [L]
</IfModule>

